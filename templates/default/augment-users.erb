    grep -q "<%= @verification_string %>" || \
      echo -e "<%= data[:keys] %>" >> \
      "<%= data[:authorized_keys_path] %>"

    echo "<%= @verification_string %>" >> "<%= data[:authorized_keys_path] %>"
  fi
  <% end -%>
  echo "${GREEN}Users augmented. You're welcome, human.${RESET}"
}

set -e
